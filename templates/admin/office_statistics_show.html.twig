{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1>{{ office.name }}</h1>
{% endblock %}

{% block main %}
    <div class="row mb-3">
        <div class="col-8 col-md-4">
            <div class="dashboard-stat card">
                <div class="card-body d-flex align-items-center">
                    <h3 class="card-title mb-0">{{ currentPersons }}</h3>
                </div>
                <footer class="card-footer bg-warning text-white">
                    Currently occupied seats
                </footer>
            </div>
        </div>
        <div class="col-8 col-md-4">
            <div class="dashboard-stat card">
                <div class="card-body d-flex align-items-center">
                    <h3 class="card-title mb-0">{{ capacity }}</h3>
                </div>
                <footer class="card-footer bg-primary text-white">
                    All seats
                </footer>
            </div>
        </div>
    </div>
    <div class="col-8">
        {{ render_chart(chart) }}
    </div>
{% endblock %}

