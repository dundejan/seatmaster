{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1>{{ office.name }}</h1>
{% endblock %}

{% block main %}
<div class="container-fluid">
    <h3>Current occupation</h3>
    <div class="row">
        <div class="col-5 col-md-5">
            <div class="dashboard-stat card">
                <div class="card-body d-flex align-items-center">
                    <h3 class="card-title mb-0">{{ currentPersons }}</h3>
                </div>
                <footer class="card-footer bg-warning text-white">
                    Currently occupied seats
                </footer>
            </div>
        </div>
        <div class="col-5 col-md-5">
            <div class="dashboard-stat card">
                <div class="card-body d-flex align-items-center">
                    <h3 class="card-title mb-0">{{ capacity }}</h3>
                </div>
                <footer class="card-footer bg-primary text-white">
                    All seats
                </footer>
            </div>
        </div>
    </div>
    <div class="col-10 mt-5">
        <h3>Today's occupation</h3>
        {{ render_chart(chartToday) }}
    </div>
    <div class="col-10 mt-5">
        <h3>Average occupation in last 20 and future 10 days</h3>
        {{ render_chart(chartMonth) }}
    </div>
</div>
{% endblock %}

