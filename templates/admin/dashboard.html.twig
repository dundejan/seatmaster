{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <h1>Statistics</h1>
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 col-md-3">
                <div class="dashboard-stat card">
                    <div class="card-body d-flex align-items-center">
                        <h3 class="card-title mb-0">{{ statistics.totalPersons }}</h3>
                    </div>
                    <footer class="card-footer bg-primary text-white">
                        Total Persons
                    </footer>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="dashboard-stat card">
                    <div class="card-body d-flex align-items-center">
                        <h3 class="card-title mb-0">{{ statistics.currentlyOngoingAssignments }}</h3>
                    </div>
                    <footer class="card-footer bg-warning text-white">
                        Persons currently in office
                    </footer>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="dashboard-stat card">
                    <div class="card-body d-flex align-items-center">
                        <h3 class="card-title mb-0">{{ statistics.totalOffices }}</h3>
                    </div>
                    <footer class="card-footer bg-success text-white">
                        Offices
                    </footer>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="dashboard-stat card">
                    <div class="card-body d-flex align-items-center">
                        <h3 class="card-title mb-0">{{ statistics.totalSeats }}</h3>
                    </div>
                    <footer class="card-footer bg-info text-white">
                        Seats
                    </footer>
                </div>
            </div>
            {# Additional blocks for other statistics... #}
        </div>
        <div class="col-10 mt-5">
            <h3>Today's occupancy</h3>
            {{ render_chart(chartDay) }}
        </div>
        <div class="col-10 mt-5">
            <h3>Average occupancy in the last 20 and future 10 days (between 8:00 and 20:00)</h3>
            {{ render_chart(chartMonth) }}
        </div>
    </div>
{% endblock %}
